{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=lib/index.js --external:firebase-admin --external:firebase-functions --external:@nestjs/common --external:@nestjs/core --external:@nestjs/platform-express --external:reflect-metadata",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "esbuild": "^0.24.0",
    "typescript": "~5.9.2"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.3.0",
    "reflect-metadata": "^0.2.0"
  },
  "private": true
}
