{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["../../apps/api/src/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src/**/*", "../../apps/api/src/**/*"]
}
