{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@chirimen-device-dashboard/shared-types": ["libs/shared-types/src/index.ts"],
      "@chirimen-device-dashboard/devices-data-access": ["libs/devices/data-access/src/index.ts"],
      "@chirimen-device-dashboard/devices-ui": ["libs/devices/ui/src/index.ts"],
      "@chirimen-device-dashboard/devices-state": ["libs/devices/state/src/index.ts"],
      "@chirimen-device-dashboard/devices-feature-list": ["libs/devices/feature-list/src/index.ts"],
      "@chirimen-device-dashboard/devices-feature-create": ["libs/devices/feature-create/src/index.ts"],
      "@chirimen-device-dashboard/devices-feature-edit": ["libs/devices/feature-edit/src/index.ts"],
      "@chirimen-device-dashboard/api/*": ["apps/api/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
